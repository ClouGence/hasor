<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:root="http://project.hasor.net/hasor/schema/main" xmlns="http://project.hasor.net/hasor/schema/hasor-quick">
	<!-- 框架配置 -->
	<hasor>
		<!-- 包扫描范围 -->
		<loadPackages>net.hasor.quick.*</loadPackages>
		<!-- 默认要装载的模块 -->
		<modules>
			<module class="net.hasor.quick.plugin.PluginsModule" />
		</modules>
		<!-- Hasor-Web 专用 -->
		<webConfig>
			<encoding urlPatterns="/*;" requestEncoding="UTF-8" responseEncoding="UTF-8" />
		</webConfig>
	</hasor>
</config>