<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="false">
    <!-- 控制台输出日志 -->
    <appender name="consoleOut" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>
    <!-- 文件输出日志 -->
    <appender name="fileOut" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>../logs/console.log.%d{yyyy-MM-dd}</fileNamePattern>
        </rollingPolicy>
        <Encoding>UTF-8</Encoding>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <logger name="net.hasor.rsf" additivity="false" level="INFO">
        <appender-ref ref="fileOut"/>
    </logger>

    <logger name="net.hasor.land" additivity="false" level="INFO">
        <appender-ref ref="consoleOut"/>
    </logger>

</configuration>  