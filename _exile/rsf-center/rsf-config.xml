<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://www.hasor.net/sechma/main">
    <hasor.environmentVar>
        <!-- 工作目录 -->
        <WORK_HOME>%app.home%/works</WORK_HOME>

        <!-- Center工作在集群模式下的时候,集群的机器列表 -->
        <RSF_CENTER_SERVERS></RSF_CENTER_SERVERS>

        <!-- Center工作模式 -->
        <RSF_CENTER_WORK_MODE>server</RSF_CENTER_WORK_MODE>
        <!-- RSF对外提供服务的IP -->
        <RSF_SERVICE_IP>127.0.0.1</RSF_SERVICE_IP>
        <!-- Telnet 控制台端口 -->
        <RSF_CONSOLE_PORT>2180</RSF_CONSOLE_PORT>
        <!-- RSF对外提供服务的IP（可以配置 0 用来关闭 RSF连接器） -->
        <RSF_SERVICE_PORT>2181</RSF_SERVICE_PORT>

        <!-- Keys文件( %WORK_HOME% 优先,如果没有再到classpath下查找) -->
        <RSF_CENTER_AUTH_FILE_NAME>auth_keys.xml</RSF_CENTER_AUTH_FILE_NAME>

    </hasor.environmentVar>
</config>